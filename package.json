{
    "name": "bloq",
    "version": "1.0.0",
    "author": "mupinnn",
    "license": "MIT",
    "private": "true",
    "scripts": {
        "copy:html": "shx cp -R src/*.html dist/",
        "build:css": "cross-env NODE_ENV=production postcss src/css/tailwind.css -o dist/css/style.css",
        "watch:css": "cross-env NODE_ENV=development postcss src/css/tailwind.css -o src/css/style.css --watch",
        "serve:dev": "live-server ./src",
        "serve:prod": "live-server --port=9000 ./dist",
        "build:prod": "npm-run-all build:css copy:html",
        "dev": "run-p watch:css serve:dev"
    },
    "dependencies": {
        "autoprefixer": "^9.8.6",
        "tailwindcss": "^1.7.2"
    },
    "devDependencies": {
        "cross-env": "^7.0.2",
        "cssnano": "^4.1.10",
        "live-server": "^1.2.1",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^7.1.1",
        "shx": "^0.3.2"
    }
}
